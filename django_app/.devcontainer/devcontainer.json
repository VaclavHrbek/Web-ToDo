{
    "name": "Django Development Container",
    "context": "..",
    "dockerFile": "../Dockerfile",
    "workspaceFolder": "/app",
    "workspaceMount": "source=${localWorkspaceFolder},target=/app,type=bind",
    "customizations": {
      "vscode": {
        "extensions": [
          "ms-python.python",
          "ms-python.vscode-pylance",
          "GitHub.copilot"
        ]
      }
    },
    "postCreateCommand": "pip install -r requirements.txt"
}
